apiVersion: rook.io/v1alpha1
kind: Pool
metadata:
  name: replicapool
  namespace: rook
spec:
  replicated:
    size: {{ groups['kubernetes-nodes'] | length }}
  failureDomain: host
---
apiVersion: storage.k8s.io/v1
kind: StorageClass
metadata:
  name: rook-block
provisioner: rook.io/block
parameters:
  pool: replicapool
